rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      // Only allow user creation by authenticated users (you might want to restrict this further)
      allow create: if request.auth != null;
    }
    
    // Orders rules
    match /orders/{orderId} {
      allow read: if request.auth != null;
      
      // Any authenticated user can create an order
      allow create: if request.auth != null;

      // Any authenticated user can update an order
      allow update: if request.auth != null;

      // Any authenticated user can delete an order
      allow delete: if request.auth != null;
    }
    
    // Rules for counters
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
    
    // Rules for notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // Helper function to get user role
    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }
  }
}